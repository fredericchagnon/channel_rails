<div class="row">
	<div class="span6 offset3">
		<br>
		<div class="channel-hero-unit">
			<br>
			<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'form-horizontal' }) do |f| %>
			<div class="control-group controls">
				<h2>Change your password</h2>
			</div>
		  <%= f.error_notification %>

		  <%= f.input :reset_password_token, :as => :hidden %>
		  <%= f.full_error :reset_password_token %>

		  <div class="inputs">
		    <%= f.input :password, :label => "New password", :required => true %>
		    <%= f.input :password_confirmation, :label => "Confirm your new password", :required => true %>
		  </div>

		  <div class="control-group controls">
		    <%= f.button :submit, "Change my password", :class => 'btn-large btn-primary' %>
				<br>
				<br>
				<%= render "users/links" %>
		  </div>
			<% end %>
	  </div>
  </div>
</div>
